<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tantuni.zamazon">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.AddAddressActivity"
            android:label="@string/title_add_address"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tantuni.zamazon.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AddCreditCardActivity"
            android:label="@string/title_add_credit_card"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tantuni.zamazon.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AddressesActivity"
            android:label="@string/title_addresses"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tantuni.zamazon.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.CreditCardsActivity"
            android:label="@string/title_credit_cards"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tantuni.zamazon.activities.MainActivity" />
        </activity>
        <activity android:name=".activities.SellerActivity" />
        <activity android:name=".activities.AdminActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_login"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tantuni.zamazon.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SignUpActivity"
            android:label="@string/title_signup"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tantuni.zamazon.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ProductDetailsActivity"
            android:label="@string/title_product_details"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tantuni.zamazon.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ChangePasswordActivity"
            android:label="@string/title_change_password"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tantuni.zamazon.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AddProductActivity"
            android:label="@string/title_add_product">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tantuni.zamazon.activities.SellerActivity" />
        </activity>
    </application>

</manifest>